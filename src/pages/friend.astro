---
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import FriendCard from "@/components/mdx/FriendCard.astro";
import LinkCard from "@/components/mdx/LinkCard.astro";
import Showcase from "@/components/mdx/Showcase.astro";
import Card from "@/components/temple/Card.astro";
import CardGroup from "@/components/temple/CardGroup.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";

const sites = [{ name: "Frosti 示例站", url: "https://frosti.saroprock.com/" }];
---

<BaseLayout title="友链">
  <CardGroup cols="1">
    <MainCard
      title="友链与资源"
      description="这里收集了朋友站点、贡献者和常用参考资料。"
      textOverlay="友链"
      infoIcon="lucide:link"
    >
      <div class="space-y-10">
        <section>
          <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
            <Icon name="lucide:users" class="w-6 h-6 text-primary" />
            <span>友链</span>
          </h2>

          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <FriendCard
              name="Lyme Blurred"
              avatar="https://github.com/lymeblurred.png"
              description="每天都在构建、拆解、学习，持续进步。"
              url="https://github.com/lymeblurred"
              type="friend"
            />
            <FriendCard
              name="MeowLynxSea"
              avatar="https://github.com/MeowLynxSea.png"
              description="喜欢代码与创作，也热爱分享日常灵感。"
              url="https://github.com/MeowLynxSea"
              type="friend"
            />
            <FriendCard
              name="SnowFox"
              avatar="https://github.com/SnowFoxqwq.png"
              description="专注技术实践，持续输出有温度的内容。"
              url="https://github.com/SnowFoxqwq"
              type="friend"
            />
          </div>
        </section>

        <section>
          <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
            <Icon name="lucide:git-pull-request" class="w-6 h-6 text-primary" />
            <span>贡献者</span>
          </h2>

          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <FriendCard
              name="EveSunMaple"
              avatar="https://github.com/EveSunMaple.png"
              description="代码是热爱，也是长期主义。"
              url="https://github.com/EveSunMaple"
              type="contributor"
            />
            <FriendCard
              name="Loping151"
              avatar="https://github.com/Loping151.png"
              description="专注实用与稳定，持续贡献。"
              url="https://github.com/Loping151"
              type="contributor"
            />
            <FriendCard
              name="TNXG"
              avatar="https://github.com/TNXG.png"
              description="保持热爱，保持创造。"
              url="https://github.com/TNXG"
              type="contributor"
            />
            <FriendCard
              name="Yaoqx"
              avatar="https://github.com/YaoqxCN.png"
              description="喜欢编程，也喜欢把想法变成作品。"
              url="https://github.com/YaoqxCN"
              type="contributor"
            />
            <FriendCard
              name="Yao Tutu"
              avatar="https://github.com/yaotutu.png"
              description="计算机专业背景，热衷项目实践。"
              url="https://github.com/yaotutu"
              type="contributor"
            />
            <FriendCard
              name="WRXinYue"
              avatar="https://github.com/WRXinYue.png"
              description="技术不止是工具，也是一种表达。"
              url="https://github.com/WRXinYue"
              type="contributor"
            />
          </div>
        </section>

        <section>
          <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
            <Icon name="lucide:bookmark" class="w-6 h-6 text-primary" />
            <span>常用资源</span>
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <LinkCard
              title="Astro 官方文档"
              desc="从入门到进阶都覆盖的 Astro 官方资料。"
              url="https://docs.astro.build"
              icon="simple-icons:astro"
              categories={["文档", "学习", "参考"]}
            />

            <LinkCard
              title="Tailwind CSS 文档"
              desc="学习如何用实用类快速完成页面样式设计。"
              url="https://tailwindcss.com/docs"
              icon="simple-icons:tailwindcss"
              categories={["文档", "CSS", "参考"]}
            />

            <LinkCard
              title="DaisyUI 组件库"
              desc="查看 DaisyUI 组件并快速接入项目。"
              url="https://daisyui.com/components/"
              icon="simple-icons:daisyui"
              categories={["组件", "UI", "参考"]}
            />

            <LinkCard
              title="TypeScript 手册"
              desc="TypeScript 的系统化学习与语法参考。"
              url="https://www.typescriptlang.org/docs/handbook/intro.html"
              icon="simple-icons:typescript"
              categories={["文档", "TypeScript", "参考"]}
            />
          </div>
        </section>

        <div class="divider my-8">
          <Icon name="lucide:heart" class="w-10 h-10 text-primary" />
        </div>

        <div class="text-center">
          <p class="text-base-content/80 mb-4">想把你的站点展示在这里？欢迎联系我或直接提交 PR。</p>
          <a
            href="https://github.com/EveSunMaple/Frosti"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary gap-2"
          >
            <Icon name="lucide:github" class="w-5 h-5" />
            <span>在 GitHub 参与贡献</span>
          </a>
        </div>
      </div>
    </MainCard>

    <Card>
      <div class="p-4 sm:p-6">
        <div class="space-y-10">
          <section>
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 gap-2">
              <h2 class="text-2xl font-bold flex items-center gap-2">
                <Icon name="lucide:layout-template" class="w-6 h-6 text-primary" />
                <span>使用 Frosti 的站点</span>
              </h2>
              <a
                href="https://github.com/EveSunMaple/Frosti/edit/main/src/pages/friend.astro"
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-sm btn-outline btn-primary gap-2"
              >
                <Icon name="lucide:plus-circle" class="w-4 h-4" />
                添加你的站点
              </a>
            </div>
            <p class="text-base-content/70 mb-6">
              这里是使用 Frosti 搭建的站点列表。如果你也在使用，点击右上角按钮即可提交 PR 添加展示。
            </p>
            <div class="flex flex-wrap items-center gap-3">
              {sites.map((site) => <Showcase name={site.name} url={site.url} />)}
            </div>
          </section>
        </div>
      </div>
    </Card>
  </CardGroup>
</BaseLayout>