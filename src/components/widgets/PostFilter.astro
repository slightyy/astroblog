---
import type { PostData } from "@interfaces/data";
import { getCategoryLabel, getTagLabel } from "@utils/taxonomyLabel";
import { Icon } from "astro-icon/components";

const { categories = [], tags = [] } = Astro.props as PostData;
---

<div class="flex flex-wrap items-center gap-2">
  {
    categories.map((category) => (
      <a href={`/blog/category/${category}`} class="btn btn-xs btn-category">
        <Icon name="lucide:folder" class="w-4 h-4" />
        <span>{getCategoryLabel(category)}</span>
      </a>
    ))
  }
  {
    tags.map((tag) => (
      <a href={`/blog/tag/${tag}`} class="btn btn-xs btn-tag">
        <Icon name="lucide:tag" class="w-4 h-4" />
        <span>{getTagLabel(tag)}</span>
      </a>
    ))
  }
  {
    categories.length === 0 && (
      <span class="btn btn-xs btn-ghost opacity-60 gap-1">
        <Icon name="lucide:folder" class="w-4 h-4" />
        <span>暂无分类</span>
      </span>
    )
  }
  {
    tags.length === 0 && (
      <span class="btn btn-xs btn-ghost opacity-60 gap-1">
        <Icon name="lucide:tag" class="w-4 h-4" />
        <span>暂无标签</span>
      </span>
    )
  }
</div>